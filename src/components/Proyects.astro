---
const PROJECTS = [
    {
        title: 'Project 1',
        description: 'Lorem ipsum dolor sit amet, consectetur',
        link: '#',
        img: '#/',
        tags: ['HTML', 'CSS', 'JavaScript']
    }
]
---


{
    PROJECTS.map(({title, description, link, img, tags}) =>(
        <article>
            <h3>{title}</h3>
            <p>{description}</p>
            <ul>
                {tags.map(tag => (
                    <li>{tag}</li>
                ))}
            </ul>
            <img src={img} alt={`Captura de pantalla del proyecto ${title}`}>
            <a href={link}></a>
        </article>
    ))
}